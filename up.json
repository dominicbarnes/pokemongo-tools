{
  "name": "pokemongo-tools",
  "profile": "personal",
  "hooks": {
    "prebuild": [
      "npm run clean",
      "npm install --only dev"
    ],
    "build": [
      "npm run build",
      "npm prune --production",
      "npx node-prune"
    ]
  },
  "proxy": {
    "command": "node server/index.js",
    "retry": false
  },
  "environment": {
    "COUCHDB_URL": "https://c38aeb6d-2e18-40ca-b7e9-404da06abd39-bluemix.cloudant.com",
    "ADMIN_USERNAME": "c38aeb6d-2e18-40ca-b7e9-404da06abd39-bluemix",
    "METADATA_USERNAME": "pokemongo-metadata",
    "METADATA_PASSWORD": "readonly"
  },
  "stages": {
    "staging": {
      "domain": "stage.pokemongo.tools"
    },
    "production": {
      "domain": "pokemongo.tools"
    }
  }
}
