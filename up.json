{
  "name": "pokemongo-tools",
  "profile": "up",
  "hooks": {
    "prebuild": [
      "npm run clean",
      "npm install --only dev"
    ],
    "build": [
      "npm run build",
      "npm prune --production",
      "npx node-prune"
    ]
  },
  "static": {
    "dir": "public"
  },
  "environment": {
    "hoodie_dbUrl": "http://localhost:5984/",
    "hoodie_dbUrlUsername": "admin",
    "hoodie_dbUrlPassword": "secret"
  },
  "stages": {
    "development": {
      "proxy": {
        "command": "npm run dev"
      }
    },
    "staging": {
      "domain": "stage.pokemongo.tool"
    },
    "production": {
      "domain": "pokemongo.tools",
      "lambda": {
        "warm": false
      }
    }
  }
}
