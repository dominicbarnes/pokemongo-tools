{
  "name": "pokemongo-tools",
  "profile": "up",
  "hooks": {
    "prebuild": [
      "npm run clean",
      "npm install --only dev"
    ],
    "build": [
      "npm run build",
      "npm prune --production",
      "npx node-prune"
    ]
  },
  "static": {
    "dir": "public"
  },
  "environment": {
    "hoodie_dbUrl": "http://localhost:5984/",
    "hoodie_dbUrlUsername": "admin",
    "hoodie_dbUrlPassword": "secret",
    "METADATA_USERNAME": "admin",
    "METADATA_PASSWORD": "secret"
  },
  "stages": {
    "development": {
      "proxy": {
        "command": "npm run dev"
      }
    },
    "staging": {
      "domain": "stage.pokemongo.tools",
      "environment": {
        "hoodie_dbUrl": "https://c38aeb6d-2e18-40ca-b7e9-404da06abd39-bluemix.cloudant.com/",
        "hoodie_dbUrlUsername": "c38aeb6d-2e18-40ca-b7e9-404da06abd39-bluemix",
        "METADATA_USERNAME": "pokemongo-metadata",
        "METADATA_PASSWORD": "readonly"
      }
    },
    "production": {
      "domain": "pokemongo.tools",
      "lambda": {
        "warm": false
      }
    }
  }
}
