{
  "name": "pokemongo-tools",
  "version": "0.0.2",
  "private": true,
  "dependencies": {
    "@hoodie/server": "^23.0.0",
    "good": "^7.3.0",
    "hapi": "^16.6.3",
    "inert": "^4.2.1",
    "pouchdb-adapter-http": "^6.4.1",
    "pouchdb-core": "^6.4.1",
    "pouchdb-mapreduce": "^6.4.1"
  },
  "devDependencies": {
    "@hoodie/client": "^10.1.1",
    "add-cors-to-couchdb": "0.0.6",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "bluebird": "^3.5.1",
    "bootstrap": "^4.0.0",
    "bootstrap-vue": "^2.0.0-rc.1",
    "browserify": "^16.1.0",
    "clone": "^2.1.1",
    "concurrently": "^3.5.1",
    "couchdb-bootstrap": "^1.14.0",
    "debounce": "^1.1.0",
    "empty-element": "^1.0.0",
    "envify": "^4.1.0",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.3.0",
    "exorcist": "^1.0.0",
    "graphql-request": "^1.5.1",
    "moment": "^2.21.0",
    "nano": "^6.4.3",
    "nano-blue": "^0.3.0",
    "nano-promises": "^1.2.0",
    "node-prune": "^1.0.2",
    "numeral": "^2.0.6",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.0.0",
    "postcss-url": "^7.3.1",
    "pouchdb": "^6.3.4",
    "pouchdb-browser": "^6.3.4",
    "sift": "^5.1.0",
    "slugify": "^1.2.9",
    "sort-by": "^1.2.0",
    "uglifyify": "^4.0.5",
    "vue": "^2.5.9",
    "vue-markdown": "^2.2.4",
    "vue-router": "^3.0.1",
    "vueify": "^9.4.1",
    "vuex": "^3.0.1",
    "wait-port": "^0.2.2",
    "watchify": "^3.11.0"
  },
  "scripts": {
    "couchdb": "docker-compose up -d && wait-port localhost:5984 && couchdb-bootstrap http://admin:secret@localhost:5984 _couchdb",
    "prebuild": "mkdir -p public",
    "build": "concurrently 'npm run build:js' 'npm run build:css'",
    "build:js": "browserify -d -t babelify -g envify -t vueify -g uglifyify index.js | exorcist public/index.js.map > public/index.js",
    "build:css": "postcss index.css -o public/index.css",
    "watch": "concurrently 'npm run watch:js' 'npm run watch:css'",
    "watch:js": "watchify -d -t babelify -g envify -t vueify index.js -o public/index.js",
    "watch:css": "postcss index.css -o public/index.css -w",
    "prestart": "npm run couchdb",
    "start": "concurrently 'node server/index.js' 'npm run watch'",
    "stop": "docker-compose stop",
    "clean": "git clean -fdx ./public",
    "distclean": "docker-compose down",
    "test": "eslint .",
    "import": "node scripts/import.js"
  },
  "eslintConfig": {
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "standard",
      "plugin:vue/essential"
    ]
  },
  "eslintIgnore": [
    "_couchdb/**",
    "public/**"
  ]
}
